<!doctype html>
<html lang="EN">

<head>
	<title>Gnome Fitness</title>
	<meta charset="utf-8" />
	<link type="text/css" rel="stylesheet" href="/assets/stylesheets/styles.css">
	<script src="site.js"></script>
</head>

<body>
		<% include partials/header.ejs %>
		<% include partials/navigation.ejs %>
	<main>
		<table>
			<tr>
				<th>Connection</th>
				<th>Category</th>
				<th>Going</th>
				<th></th>
			</tr>
			<% events.forEach(function(item){ %>
				<tr>
					<td><%= item.name %></td>
					<td><%= item.category %></td>
					<td>No</td>
					<td>
					<form action="/connection?01" method="get" target="<%= item.id %>">
							<button type="submit">Update</button>
					</form>
					<form action="/savedConnections" method="get">
							<button type="submit">Delete</button>
					</form>
					</td>
				</tr>
			<% }); %>
		</table>
	</main>

	<% include partials/footer.ejs %>

</body>

</html>